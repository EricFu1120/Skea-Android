<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/main_dark_grey</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.Base.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppActionBar.Light</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppActionBar.Light" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/main_bg</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle.Light</item>
    </style>

    <style name="ActionBarTitle.Light" parent="TextAppearance.AppCompat.Widget.Base.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
