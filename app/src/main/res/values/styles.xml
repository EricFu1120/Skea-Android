<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="colorPrimary">@color/action_bar_dark_gray</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/action_bar_light_gray</item>
        <item name="actionBarStyle">@style/AppActionBar.Light</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppActionBar.Light" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitle.Light</item>
    </style>

    <style name="ActionBarTitle.Light" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DividerWithMargin">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/bg_divider_light_gray</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/bg_divider_light_gray</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_light_gray</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Preference" />

    <style name="Preference.TextView" />

    <style name="Preference.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_preference_item_height</item>
        <item name="android:background">@drawable/selector_preference_item</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Setting -->
    <style name="Setting"></style>

    <style name="Setting.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Setting.Item.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/SettingItemHeight</item>
        <item name="android:textSize">@dimen/SettingItemTextSize</item>
    </style>

    <style name="Setting.Item.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/listview_divider</item>
    </style>


    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@color/listview_divider</item>
    </style>

    <style name="ListView.Cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/listview_cell_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListView.Cell.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/ListCellHeight</item>
        <item name="android:layout_marginRight">@dimen/ListCellMargin</item>
        <item name="android:textColor">@color/listview_cell_text</item>
        <item name="android:textSize">@dimen/ListCellTextSize</item>
    </style>

</resources>
