<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_exercise"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/behindParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ScrollView
            android:layout_width="70dp"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:id="@+id/behind_scrollView"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/behind_group"
                android:layout_width="wrap_content"
                android:minHeight="70dp"
                android:layout_height="match_parent">

            </LinearLayout>


        </ScrollView>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:src="@drawable/laser_active"
            android:layout_height="30dp"
            android:id="@+id/laser"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/frontParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <RelativeLayout
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:id="@+id/time_left_container">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_hexagon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:id="@+id/time_left_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_left_title"
                    android:text="2:15"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_blue"
                    android:id="@+id/time_left" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="16dp"
            android:layout_below="@+id/time_left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_hexagon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:id="@+id/score_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/score_title"
                    android:text="11678"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_blue"
                    android:id="@+id/score" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="scrollX"
            android:textColor="@color/white"
            android:id="@+id/scrollX"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="scrollY"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/scrollX"
            android:textColor="@color/white"
            android:id="@+id/scrollY"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/scrollX"
            android:layout_toEndOf="@+id/scrollX">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/exercise_group"
                android:layout_width="wrap_content"
                android:minHeight="70dp"
                android:layout_height="match_parent">



            </LinearLayout>


        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shrink"
            android:id="@+id/shrink_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</RelativeLayout>