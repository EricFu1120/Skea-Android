<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_exercise"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/behindParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ScrollView
            android:id="@+id/behind_scrollView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/behind_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="70dp"
                android:orientation="vertical">

            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/frontParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp">

        <RelativeLayout
            android:id="@+id/time_left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_hexagon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_left_title"
                    android:textColor="@color/text_light_blue"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/time_left_container"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_hexagon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/score_title"
                    android:textColor="@color/text_light_blue"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

        TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="scrollX"
        android:textColor="@color/white"
        android:id="@+id/scrollX"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="scrollY"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scrollX"
        android:textColor="@color/white"
        android:id="@+id/scrollY"
        android:layout_centerHorizontal="true" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/exercise_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="70dp"
                android:orientation="vertical">


            </LinearLayout>


        </ScrollView>

        <ToggleButton
            android:id="@+id/shrink_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Shrink"
            android:textOff="relax"
            android:textOn="shrink" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/laser"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/laser_active" />

</RelativeLayout>