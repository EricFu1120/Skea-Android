<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.linkcube.skea.ui.user.UserInfoActivity">


    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/icon_avatar"
        android:id="@+id/avatar" />

    <TextView
        android:id="@+id/user_name"
        android:layout_marginTop="10dp"
        android:text="User NickName"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        style="@style/SplitLine"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/test_pelvic_muscle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/icon_test_pelvic_muscle"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical|left"
        android:textSize="20dp"
        android:background="@null"
        android:text="Test Pelvic Muscle"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/arrow_right"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <View style="@style/SplitLine" />

    <TextView
        android:id="@+id/skea_settings"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/icon_skea_settings"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical|left"
        android:textSize="20dp"
        android:background="@null"
        android:text="Skea Settings"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/arrow_right"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <View style="@style/SplitLine" />

    <TextView
        android:id="@+id/purchase_product"
        android:drawableLeft="@drawable/icon_purchase_product"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical|left"
        android:textSize="20dp"
        android:background="@null"
        android:text="Purchase Procuct"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/arrow_right"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <View style="@style/SplitLine" />

    <View
        style="@style/SplitLine"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/software_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/icon_software_settings"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical|left"
        android:textSize="20dp"
        android:background="@null"
        android:text="Software Settings"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/arrow_right"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <View style="@style/SplitLine" />

</LinearLayout>
