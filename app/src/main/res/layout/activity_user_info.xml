<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_light_grey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.linkcube.skea.ui.user.UserInfoActivity">


    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/icon_me"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="Nickname"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/test_pelvic_muscle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/icon_test_pelvic_muscle"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="Test Pelvic Muscle"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/skea_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/icon_skea_settings"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="Skea Settings"
        android:textSize="20sp" />

    <View style="@style/SplitLine" />

    <TextView
        android:id="@+id/purchase_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/icon_purchase_product"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="Purchase Procuct"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/software_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/icon_software_settings"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="Software Settings"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/logout_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_blue"
        android:text="Sign Out"
        android:textSize="20dp" />

</LinearLayout>
