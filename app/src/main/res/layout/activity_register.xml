<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/action_bar_light_gray"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:id="@+id/imageView"
        android:padding="15dp"
        android:src="@drawable/logo_skea"
        android:layout_gravity="center_horizontal" />

    <View
        style="@style/DividerWithMargin"
        android:background="@color/action_bar_dark_gray"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <AutoCompleteTextView
        android:id="@+id/email"
        android:background="@null"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="10dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <View
        style="@style/DividerWithMargin"
        android:background="@color/action_bar_dark_gray"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:paddingLeft="30dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <View
        style="@style/DividerWithMargin"
        android:background="@color/action_bar_dark_gray"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="30dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <View
        style="@style/DividerWithMargin"
        android:background="@color/action_bar_dark_gray"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/clause_checkbox"
            android:background="@drawable/selector_checkbox"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:autoLink="none"
            android:text="同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:autoLink="none"
            android:text="@string/clause"
            android:textColor="@color/text_light_blue"
            android:id="@+id/clause_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <Button
        android:id="@+id/register_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_blue"
        android:text="@string/register"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/login_button"
        android:layout_gravity="bottom"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_margin="10dp"
        android:background="@drawable/btn_gray"
        android:text="@string/login"
        android:textSize="20dp" />


</LinearLayout>



