<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/action_bar_light_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_skea" />

    <View
        style="@style/DividerWithMargin"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/action_bar_dark_gray" />

    <AutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="10dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:singleLine="true" />

    <View
        style="@style/DividerWithMargin"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/action_bar_dark_gray" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:singleLine="true" />

    <View
        style="@style/DividerWithMargin"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/action_bar_dark_gray" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/forget_password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_light_blue" />

    <Button
        android:id="@+id/login_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/btn_blue"
        android:text="@string/login"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/register_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_gray"
        android:text="@string/register"
        android:textSize="20dp" />

</LinearLayout>



