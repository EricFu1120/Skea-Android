<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercise_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:checkedButton="@+id/level4_rb"
    tools:context="me.linkcube.skea.ui.test.ExerciseLevelSettingActivity">

    <RadioButton
        android:id="@+id/level1_rb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:button="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/selector_checkbox"
        android:text="Level 1"
        android:textSize="22sp" />

    <View style="@style/SplitLine" />

    <RadioButton
        android:id="@+id/level2_rb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:button="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/selector_checkbox"
        android:text="Level 2"
        android:textSize="22sp" />

    <View style="@style/SplitLine" />

    <RadioButton
        android:id="@+id/level3_rb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:button="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/selector_checkbox"
        android:text="Level 3"
        android:textSize="22sp" />

    <View style="@style/SplitLine" />

    <RadioButton
        android:id="@+id/level4_rb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:button="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/selector_checkbox"
        android:text="Level 4 ( Recommended )"
        android:textSize="22sp" />

    <View style="@style/SplitLine" />

    <RadioButton
        android:id="@+id/level5_rb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:button="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/selector_checkbox"
        android:text="Level 5"
        android:textSize="22sp" />

    <View style="@style/SplitLine" />
</RadioGroup>
