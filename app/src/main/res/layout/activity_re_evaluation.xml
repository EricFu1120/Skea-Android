<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.linkcube.skea.ui.test.ReEvaluationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Please fill in the questionnaire in order that we can evaluation the health risk of your pelvic floor muscle "
                android:textColor="@color/main_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/basic_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_item_height"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_title"
                android:gravity="center_vertical|left"
                android:paddingLeft="25dp"
                android:text="Basic Information"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Birthday"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1980-1-1" />

            </RelativeLayout>

            <View style="@style/SplitLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Height"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="167CM" />

            </RelativeLayout>

            <View style="@style/SplitLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Weight"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="52Kg" />

            </RelativeLayout>

            <TextView
                android:id="@+id/exercise"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_item_height"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_title"
                android:gravity="center_vertical|left"
                android:paddingLeft="25dp"
                android:text="Health Infomation"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Reproductive History" />

                <me.linkcube.skea.view.LevelRadioGroup xmlns:app="http://schemas.android.com/apk/res/me.linkcube.skea"
                    app:level1="0"
                    app:level2="1"
                    app:level3="2"
                    app:level4="3"
                    app:level5=">3"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Sexual Activity" />

                <me.linkcube.skea.view.LevelRadioGroup xmlns:app="http://schemas.android.com/apk/res/me.linkcube.skea"
                    app:level1="Almost\nNever"
                    app:level2="Rare\n(>4 yearly)"
                    app:level3="Ocassional\n(>1 monthly)"
                    app:level4="Active\n(>1 weekly)"
                    app:level5="Pretty Active\n(>3 weekly)"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/bookmark"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Sexual activity is a key variable related to the risk factor of pelvic floor muscle dysfunction"
                    android:textColor="@color/main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Urinary Incontinence" />

                <me.linkcube.skea.view.LevelRadioGroup xmlns:app="http://schemas.android.com/apk/res/me.linkcube.skea"
                    app:level1="Never"
                    app:level2="Rare\n(>4 yearly)"
                    app:level3="Ocassional\n(>1 monthly)"
                    app:level4="Often\n(>1 weekly)"
                    app:level5="Pretty Often\n(>3 weekly)"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/bookmark"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Urinary incontinence is the measure of a risk factor of pelvic floor muscle dysfunction"
                    android:textColor="@color/main_blue" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Mental Status" />

                <me.linkcube.skea.view.LevelRadioGroup xmlns:app="http://schemas.android.com/apk/res/me.linkcube.skea"
                    app:level1="Very\nRestful"
                    app:level2="Restful"
                    app:level3="Normal"
                    app:level4="Stressful"
                    app:level5="Very\nStressful"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/bookmark"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Urinary incontinence is the measure of a risk factor of pelvic floor muscle dysfunction"
                    android:textColor="@color/main_blue" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/submit_bt"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_blue"
        android:text="Submit"
        android:textSize="20dp" />


</LinearLayout>
