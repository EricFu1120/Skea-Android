<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.linkcube.skea.ui.test.SettingExerciseLevel">
    <RadioGroup
        android:id="@+id/exercise_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:checkedButton="@+id/level4_rb"
        >
        <View style="@style/SplitLine"
            android:layout_marginTop="50dp"/>
        <RadioButton
            android:id="@+id/level1_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textSize="25sp"/>
        <View style="@style/SplitLine" />
        <RadioButton
            android:id="@+id/level2_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 2"
            android:textSize="25sp"/>
        <View style="@style/SplitLine" />
        <RadioButton
            android:id="@+id/level3_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 3"
            android:textSize="25sp"/>
        <View style="@style/SplitLine" />
        <RadioButton
            android:id="@+id/level4_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 4     ( Recommended )"
            android:textSize="25sp"/>
        <View style="@style/SplitLine" />
        <RadioButton
            android:id="@+id/level5_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 5"
            android:textSize="25sp"/>
        <View style="@style/SplitLine" />
    </RadioGroup>


</LinearLayout>
