<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text="Connecting your Skea ..."
        android:textSize="@dimen/TextSize.Super" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:layout_alignParentLeft="true"
            android:text="Bluetooth"
            android:textColor="@color/text_light_blue"
            android:textSize="@dimen/TextSize.Large" />

        <ToggleButton
            android:id="@+id/bluetooth_tb"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_toggle"
            android:layout_alignParentRight="true"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View style="@style/Setting.Item.Divider" />

    <me.linkcube.skea.ui.bluetooth.BTDeviceListView
        android:id="@+id/device_lv"
        style="@style/ListView"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/SettingPadding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"

        android:text="Please turn on your Skea and put it near your phone"
        android:padding="15dp"
        android:textColor="@color/action_bar_dark_gray"
        android:textSize="@dimen/TextSize.Large"/>


</LinearLayout>