<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="me.linkcube.skea.ui.setting.ConfigSkeaActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:text="Pressure Sensitivity"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <SeekBar
            android:id="@+id/feedback_sensitive_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_dark"
            android:layout_below="@+id/feedback_sensitive_sb"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:text="insensitive"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_sensitive_sb"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:text="sensitive"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:text="Feedback Strength"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <SeekBar
            android:id="@+id/press_sensitive_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/press_sensitive_sb"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:text="Weak"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/press_sensitive_sb"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:text="Strong"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
