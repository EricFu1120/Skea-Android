<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/action_bar_light_gray"
    android:orientation="vertical"
    tools:context="me.linkcube.skea.ui.setting.SkeaSettingActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:text="@string/skea_setting_pressure"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <SeekBar
            android:id="@+id/feedback_sensitive_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/feedback_sensitive_sb"
            android:layout_marginTop="30dp"
            android:text="@string/skea_setting_insensitive"
            android:textColor="@color/text_light_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/feedback_sensitive_sb"
            android:layout_marginTop="30dp"
            android:text="@string/skea_setting_sensitive"
            android:textColor="@color/text_light_gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_preference_item_height"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:text="@string/skea_setting_feedback"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <SeekBar
            android:id="@+id/press_sensitive_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/press_sensitive_sb"
            android:layout_marginTop="30dp"
            android:text="@string/skea_setting_weak"
            android:textColor="@color/text_light_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/press_sensitive_sb"
            android:layout_marginTop="30dp"
            android:text="@string/skea_setting_strong"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
