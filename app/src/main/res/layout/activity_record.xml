<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="me.linkcube.skea.ui.test.RecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_dark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Today(Level 4)"
            android:textColor="@color/main_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/evaluate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/level_tv"
            android:layout_marginTop="10dp"
            android:text="Good !"
            android:textColor="@color/main_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/explosive_force_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/evaluate_tv"
            android:layout_marginTop="10dp"
            android:text="Explosive force: Great"
            android:textColor="@color/main_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/persistance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/explosive_force_tv"
            android:layout_marginTop="10dp"
            android:text="Persistance: Fair"
            android:textColor="@color/main_white"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/img_layout"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_correct_rate_gradient" />

                <TextView
                    android:id="@+id/correct_rate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="76%" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_layout"
                android:layout_centerHorizontal="true"
                android:text="Correct Rate"
                android:textColor="@color/main_white"
                android:textSize="20sp" />

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_score"
                android:drawablePadding="10dp"
                android:text="Score :1573"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/duration_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_duration"
                android:drawablePadding="10dp"
                android:text="Time :23 Min"
                android:gravity="center_vertical"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
